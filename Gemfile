source 'https://rubygems.org'

gem 'rails', '3.2.13'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'mysql2'
gem "quiet_assets"
gem "kaminari"
gem "cells"
gem 'devise'
gem 'cancan'


# Bootstrap
gem 'twitter-bootstrap-rails'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem "less-rails"
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'thin'
  gem 'pry-rails'
  gem 'pry-doc'
  gem 'pry-nav'
end

group :test do
  gem "capybara", "~> 0.4.1"
  gem "rspec-cells"
  gem "rspec-rails"
  gem "factory_girl"
  gem 'factory_girl_rails'
end


gem 'jquery-rails'

